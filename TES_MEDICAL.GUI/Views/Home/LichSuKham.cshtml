@model List<TES_MEDICAL.GUI.Models.PhieuKham>
@{
    ViewData["Title"] = "LỊCH SỬ KHÁM";
    Layout = "~/Views/Shared/GuestLayout.cshtml";
}
<style>
    #ButtonChiTiet:hover {
        cursor: pointer;
    }
</style>
<div class="row">
    <div class="col-lg-8 m-auto">
        <div class="ltn__form-box contact-form-box box-shadow white-bg">
            <h4 class="title-2">Lịch sử khám bệnh của bạn</h4>
            <div id="contact-form">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-item input-item-email">
                            <input style="color:darkslategrey" id="SDT" type="text" placeholder="Mời bạn nhập số điện thoại">
                        </div>
                    </div>
                </div>
                <div class="btn-wrapper mt-0">
                    <button class="btn theme-btn-1 btn-effect-1 text-uppercase" onclick="OpenLichSuKham()">Xem lịch sử</button>
                </div>
            </div>
        </div>
        <br />

        <!-- Utilize Cart Menu Start -->
        <div id="ltn__utilize-cart-menu" class="ltn__utilize-cart-menu pt-10">
            <div class="ltn__utilize-menu-inner ltn__scrollbar">
                <div class="ltn__utilize-menu-head">
                    <span class="ltn__utilize-menu-title">Lịch sử khám</span>
                </div>
                <div class="mini-cart-product-area">          
                    <table class="table table-bordered">
                        <thead>
                            <tr class="table-header">
                                <th class="head-item">Họ và tên</th>
                                <th class="head-item text-center">Số điện thoại</th>
                                <th class="head-item text-center">Ngày khám</th>
                                <th class="head-item text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <!--Show dữ liệu lịch sử khám-->
                        <tbody id="ShowLichSu">

                        </tbody>
                    </table>                   
                </div>
        </div>
        <!-- Utilize Cart Menu End -->
    </div>
</div>
</div>
<!-- Modal Tổng -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                  
                @*<div class="modal-title" style="font-size: 17px;text-transform:uppercase;color:#3c8dbc"><strong id="myModalTitle"></strong></div>*@
            </div>
            <div class="modal-body">

                <div id="myModalContent">

                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function OpenLichSuKham() {
        $.ajax({
            url: "/Home/SearchByPhoneNumber",
            type: 'GET',
            data: {
                SDT: $('#SDT').val()
            },
            success: function (response) {

                $("#ShowLichSu").html("");
                if (response.status == -2) {
                    $("#ShowLichSu").append(`
                            <div class="col-sm-12 text-center text-danger">
                                <h6 style="font-weight:bold"><a>Không tìm thấy</a></h6>
                            </div>
                    `)
                }
                else {
                    JSON.parse(response).forEach(function (item) {
                        console.log(item);
                        var stringDate = new Date(item.NgayKham);                                                
                        $("#ShowLichSu").append(`
                                <tr class="table-body" style="background-color: white;">
                                    <td class="body-item"><a>${item.MaBNNavigation.HoTen}</a></td>
                                    <td class="body-item text-center"><a>${item.MaBNNavigation.SDT}</a></td>
                                    <td class="body-item text-center"><a>${stringDate.toLocaleString("es-CL")}</a></td>
                                    <td class="body-item text-center">
                                        <a id="ButtonChiTiet" style="color:blue" onclick="OpenChiTietKham('${item.MaPK}')" >Chi tiết</a>
                                    </td>
                                </tr>
                                
                    `)
                    });
                }



            }
        });
    }

    function OpenChiTietKham(_MaPK) {
        $.ajax({
            url: "/Home/ChiTietLichSuKham/",
            type: 'GET',
            data: {
                MaPK: _MaPK
            },
            success: function (response) {
                $("#myModalContent").html(response);
                $('#myModal').modal('show');
                $('#btSave').show();
                $('#btupdate').hide();

            }
        });
    }
</script>





