
@{
    ViewData["Title"] = "LỊCH SỬ ĐẶT LỊCH";
    Layout = "~/Views/Shared/GuestLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8 m-auto">
        <div class="ltn__form-box contact-form-box box-shadow white-bg">
            <h4 class="title-2">Lịch sử đặt lịch của bạn</h4>
            <form id="contact-form">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-item input-item-email">
                            <input type="text" placeholder="Mời bạn nhập số điện thoại">
                        </div>
                    </div>
                </div>
                <div class="btn-wrapper mt-0">
                    <button class="btn theme-btn-1 btn-effect-1 text-uppercase" onclick="OpenModal()">Xem lịch sử</button>
                </div>
            </form>
        </div>
        <br />

        <!-- Utilize Cart Menu Start -->
        <div id="ltn__utilize-cart-menu" class="ltn__utilize-cart-menu pt-10">
            <div class="ltn__utilize-menu-inner ltn__scrollbar">
                <div class="ltn__utilize-menu-head">
                    <span class="ltn__utilize-menu-title">Lịch sử khám</span>
                </div>

                <!--Tiêu Đề-->
                <div class="mini-cart-product-area">
                    <div class="mini-cart-item clearfix">
                        <div class="mini-cart-info row">
                            <div class="col-sm-4">
                                <h6 style="font-weight:bold"><a href="#">Họ và tên</a></h6>
                            </div>
                            <div class="col-sm-4">
                                <h6 style="font-weight:bold"><a href="#">Số điện thoại</a></h6>
                            </div>
                            <div class="col-sm-4">
                                <h6 style="font-weight:bold"><a href="#">Ngày khám</a></h6>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Dữ liệu-->
                <div class="mini-cart-product-area">
                    <div class="mini-cart-item clearfix">
                        <div class="mini-cart-info row">
                            <div class="col-sm-4">
                                <h6><a href="#">Đặng Thanh Duy</a></h6>
                            </div>
                            <div class="col-sm-4">
                                <h6><a href="#">0979510278</a></h6>
                            </div>
                            <div class="col-sm-4">
                                <h6><a href="#">@DateTime.Now</a></h6>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- Utilize Cart Menu End -->
    </div>
</div>

<!-- Modal Tổng -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">

                <div class="modal-title" style="font-size: 17px;text-transform:uppercase;color:#3c8dbc"><strong id="myModalTitle"></strong></div>
            </div>
            <div class="modal-body">

                <div id="myModalContent">

                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                    <button type="button" id="btSave" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Lưu</button>
                    <button type="button" id="btupdate" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Cập nhật</button>

                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function OpenModal() {
        $.ajax({
            url: "/Home/LichSuDatLich",
            type: 'GET',
            success: function (response) {
                $("#myModalContent").html(response);
                $('#myModal').show();
                $('#btSave').show();
                $('#btupdate').hide();

            }
        });
    }
</script>




