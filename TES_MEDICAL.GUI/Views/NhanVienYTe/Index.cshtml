@model TES_MEDICAL.GUI.Models.NhanVienYteSearchModel
@using X.PagedList;
@using TES_MEDICAL.GUI.Models;
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/LayoutAdmin/LayoutAdmin.cshtml";
}






<div class="m-3">


    <div>

        @using (Html.BeginForm(null, null, FormMethod.Get, new { name = "frmSearch", id = "frmSearch", enctype = "multipart/form-data", @class = "d-flex flex-wrap m-2" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-2 mr-2">
                @Html.EditorFor(model => model.HoTenSearch, new { htmlAttributes = new { @class = "mr-2 mb-2 form-control-sm", @placeholder = "Lọc theo tên" } })
            </div>

            <div class="col-2 mr-2">
                @Html.EditorFor(model => model.SDTNVSearch, new { htmlAttributes = new { @class = "mr-2 mb-2 form-control-sm", @placeholder = "Lọc theo số điện thoại" } })
            </div>

            <div class="col-2 mr-2">
                @Html.DropDownListFor(model => model.ChuyenKhoaSearch, new SelectList(@ViewBag.ChuyenKhoa, "MaCK", "TenCK"), "Lọc theo chuyên khoa", new { @class = "mr-2 mb-2 form-control-sm" })

            </div>







            <div class="col-4">

                <button type="button" class="btn btn-success btn-sm mr-2 " onclick="Timkiem()" id="btSeach"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Lọc</button>

                <button type="button" class="btn btn-sm btn-success mr-2" onclick="Create()" id="btCreateN"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Tạo mới</button>
                <button type="button" class="btn btn-success mr-2 btn-sm" onclick="Clear()" id="btSeach"><i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;Làm mới</button>
            </div>



        }

    </div>





</div>
<div id="nameListContainer">
    <partial name="_NameListPartial" model="ViewBag.Names as IPagedList<NhanVienYte>" />

</div>




<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">


            </div>
            <div class="modal-body">

                <div id="myModalContent">

                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                    <button type="button" id="btSave" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Lưu</button>
                    <button type="button" id="btupdate" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Cập nhật</button>
                    <button type="button" id="btPrint" class="btn btn-success btn-sm" onclick="PrintPreview('pannelNhanVienYte')"><i class="fa fa-print" aria-hidden="true"></i>&nbsp;Print</button>
                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>

        var $id = "";
        var $modal = $('#myModal');
        var $myModalContent = $("#myModalContent");
        var $modalins = $('#myModalins');
        var $myModalContentins = $("#myModalContentins");
        var $myModalTitle = $("#myModalTitle");
        var $myModalTitleins = $("#myModalTitleins");
        $(document).ready(

            function () {

                $("#btSave").click(function () {
                    /*var obj = $("#frm").serializeObject();*/
                    var formData = new FormData();
                    var fileUpload = $("#upload-back").get(0);
                    var file = fileUpload.files[0];

                    formData.append("file", file);
                    formData.append('MaNV', $("#MaNV").val());
                    formData.append('Email', $("#Email").val());
                    formData.append('MatKhau', $("#MatKhau").val());
                    formData.append('ConfirmPassword', $("#ConfirmPassword").val());
                    formData.append('HoTen', $("#HoTen").val());
                    formData.append('SDTNV', $("#SDTNV").val());
                    formData.append('ChucVu', $("#ChucVu").val());
                    formData.append('TrangThai', $("#TrangThai").val());
                    formData.append('ChuyenKhoa', $("#ChuyenKhoa").val());


                    $.ajax({
                        type: "POST",
                        url: "/NhanVienYte/Add",
                        processData: false,
                        contentType: false,
                        data: formData,
                        success: function (result) {
                            $('#preloader-wrapper').toggleClass('hide');
                            if (result.status != null) {
                                if (result.status >= 1) {

                                    toastr.success(result.text);
                                    reloadpage(1);
                                }
                                else {
                                    toastr.warning(result.text);
                                }
                            }
                            else {
                                $myModalContent.html(result);
                            }
                        },
                        error: function (errormessage) {
                            alert(errormessage.responseText);
                        },
                        failure: function (message) {
                            $('#preloader-wrapper').toggleClass('hide');
                        }
                    });



                });
                $("#btupdate").click(function () {
                    /*var obj = $("#frm").serializeObject();*/
                    var formData = new FormData();
                    var fileUpload = $("#upload-back").get(0);
                    var file = fileUpload.files[0];
                    if ($('#TrangThai').is(':checked')) { formData.append('TrangThai', true) } else { formData.append('TrangThai', false) }

                    formData.append("file", file);
                    formData.append('MaNV', $("#MaNV").val());
                    formData.append('Email', $("#Email").val());
                    formData.append('MatKhau', $("#MatKhau").val());
                    formData.append('ConfirmPassword', $("#ConfirmPassword").val());
                    formData.append('HoTen', $("#HoTen").val());
                    formData.append('SDTNV', $("#SDTNV").val());
                    formData.append('ChucVu', $("#ChucVu").val());
                    /*formData.append('TrangThai', $("#TrangThai").val());*/
                    formData.append('ChuyenKhoa', $("#ChuyenKhoa").val());
                    formData.append('Hinh', $("#Hinh").val());

                    $.ajax({
                        type: "POST",
                        url: "/NhanVienYte/Edit",
                        dataType: "json",
                        processData: false,
                        contentType: false,
                        data: formData,
                        success: function (result) {
                            $('#preloader-wrapper').toggleClass('hide');
                            if (result.status >= 1) {
                                toastr.success(result.text);
                                reloadpage(1);
                            }
                            else {
                                toastr.warning(result.text);
                            }
                        },
                        error: function (errormessage) {
                            alert(errormessage.responseText);
                        },
                        failure: function (message) {
                            $('#preloader-wrapper').toggleClass('hide');
                        }
                    });


                });
                $("#btclose").click(function () {

                    reloadpage(1);
                });
                $("#btcloseins").click(function () {

                    reloadpage(1);
                });



            });

        $(document).on('click', '.remove', function () {

            $(this).parent().parent().remove();

        });

        function AddView(child) {

            $.ajax({
                url: '/NhanVienYte/add' + child,

                success: function (data) {
                    $("#partial" + child).append(data);
                }
            })
        }

        function reloadpage(page) {
            obj = {};

            obj.Page = page;
            $.ajax({
                url: '/NhanVienYte/PageList/',

                type: "Get",
                timeout: 20000,

                async: false,

                data: obj,

                success: function (result) {


                    $('#nameListContainer').html(result);
                },

                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }


        function PrintPreview(id) {
            $.print("#" + id);
        }

        function Edit(id_) {
            $myModalContent.html("");

            $.ajax({
                url: '/NhanVienYte/Edit/',

                type: "Get",
                timeout: 20000,

                async: true,
                data: {
                    id: id_
                },

                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').hide();
                    $('#btupdate').show();
                    $('#btPrint').hide();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }


        function Create() {

            $myModalContent.html("");

            $.ajax({
                url: '/NhanVienYte/Add/',

                type: "Get",
                timeout: 20000,

                async: true,


                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').show();
                    $('#btupdate').hide();
                    $('#btPrint').hide();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });

        }

        function _Detail(id_) {
            $myModalContent.html("");

            $.ajax({
                url: '/NhanVienYte/Detail/',

                type: "Get",
                timeout: 20000,

                async: true,
                data: {
                    id: id_
                },

                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').hide();
                    $('#btupdate').hide();
                    $('#btPrint').show();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }



        function _delete(id) {
            var cf = confirm('Bạn muốn xoá bản ghi này?');
            if (cf) {
                $.ajax({
                    type: "POST",
                    url: "/NhanVienYte/Delete",
                    data: { "id": id },
                    success: function (result) {
                        $('#preloader-wrapper').toggleClass('hide');
                        if (result.status >= 1) {
                            toastr.success(result.text);

                            reloadpage();
                        }
                        else {
                            toastr.warning(result.text);
                        }
                    },
                    error: function (errormessage) {
                        toastr.warning(errormessage.responseText);
                    },
                    failure: function (message) {
                        $('#preloader-wrapper').toggleClass('hide');
                    }
                });
            }

        }

        function Timkiem() {


            $.ajax({
                url: '/NhanVienYte/PageList/',

                type: "Get",
                timeout: 20000,
                async: false,
                data: $("#frmSearch").serialize(),


                success: function (result) {


                    if (result.status == -2) {
                        toastr.success(result.text);

                    }
                    else {

                        $('#nameListContainer').html(result);
                    }


                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                },


                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }

        function Clear() {


            reloadpage(1);
        }


    </script>
}




