@model IPagedList<Thuoc>

@using X.PagedList.Mvc.Core;


@using X.PagedList;
@using X.PagedList.Web.Common
<div id="list">

    <div style="min-height:400px">
        <table class="table table table-striped table-bordered text-left w-100 " style="font-size:small">
            <thead class="bg-success">
                <tr>

                    <th>

                        Tên thuốc
                    </th>

                    <th>

                        Vị trí
                    </th>

                    <th>

                        Đơn giá
                    </th>

                    <th>

                        Trạng thái
                    </th>

                    <th>

                        Hình ảnh
                    </th>

                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody class="tbody">
                @foreach (var item in ViewBag.Names as IEnumerable<Thuoc>)
                {
                    <tr>




                        <td>@item.TenThuoc</td>





                        <td>@item.Vitri</td>





                        <td>@item.DonGia</td>








                        <td>@(item.TrangThai?"Hoạt động":"Không hoạt động")</td>





                        <td>@item.HinhAnh</td>




                        <td class="text-nowrap"><a class="btn btn-info btn-sm btn-sm active" onclick="Edit('@item.MaThuoc')"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> | <a class="btn btn-danger btn-sm active" onclick="_delete('@item.MaThuoc')"> <i class="fa fa-trash"></i></a> | <a class="btn btn-dark btn-sm active" onclick="_Detail('@item.MaThuoc')" title="Thông tin"> <i class="fa fa-info-circle" aria-hidden="true"></i></a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="text-right">

        @{
            var pageRender = new PagedListRenderOptions
            {
                MaximumPageNumbersToDisplay = 5,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                DisplayLinkToLastPage = PagedListDisplayMode.Never,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayPageCountAndCurrentLocation = false,
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },


                ContainerDivClasses = new[] { "pagination-container" }


            };
        }
        @{
            var searchModel = ViewBag.Data as ThuocSearchModel;
        }


        @Html.PagedListPager((IPagedList<Thuoc>)ViewBag.Names, page => Url.Action("PageList", new { page, TenThuocSearch = searchModel.TenThuocSearch, DonGiaSearch = searchModel.DonGiaSearch, ThongTinSearch = searchModel.ThongTinSearch }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(pageRender, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "nameListContainer" }))
    </div>




</div>






