@model TES_MEDICAL.GUI.Models.ToaThuoc

<h4 style="text-align:center; font-weight:bold">THÔNG TIN TOA THUỐC ĐANG PHÁT</h4>
<hr />
<br />


<div class="col-10 m-auto">
    <input style="display:none" value="@Model.MaPhieuKham" id="maPK"/>
    <table class="table table-borderless">
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Tên bệnh nhân</td>
                <th>@Model.MaPhieuKhamNavigation.MaBNNavigation.HoTen</th>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Số điện thoại</td>
                <th>@Model.MaPhieuKhamNavigation.MaBNNavigation.SDT</th>
                <td></td>
            </tr>
        </tbody>
    </table>
    
    <table class="table">
        <thead>
            <tr>
                <th class="col-4">Tên thuốc</th>
                <th class="col-2">Số lượng</th>
                <th class="col-2">Vị trí</th>
                <th class="col-4">Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.CTToaThuocDangPhat as IEnumerable<ChiTietToaThuoc>)
            {
                <tr>
                    <td class="col-4">@item.MaThuocNavigation.TenThuoc</td>
                    <td class="col-2">@item.SoLuong</td>
                    <td class="col-2">@item.MaThuocNavigation.Vitri</td>
                    <td class="col-3">@item.GhiChu</td>
                </tr>
            }

        </tbody>
    </table>
</div>