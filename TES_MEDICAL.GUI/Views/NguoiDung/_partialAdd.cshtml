

@model TES_MEDICAL.GUI.Models.NguoiDung


<style>
    .box{
        padding: 0;
        margin: 0;
    }
    h6{
        margin-left: 10px;
        font-weight: 500;
        font-size: 18px;
    }
    .box-title-1 {
        background-color: white;
    
        border-left: 8px solid rgb(82, 183, 136);
    }
        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }
    .box-left{
       margin-inline: 5%;
    }
    .form-check .form-label{
        margin-left: -4px;
    }
    .form-check-label {
        padding-left: 20px;
        font-weight: 400;
        color: gray;
    }
    
    .box-right {
        text-align: center;
    }
        .box-right .form-group .btn-img {
            width: 103%;
            margin-left: -1%;
            background-color: rgb(82, 183, 136);
            color: white;
            border: 2px solid rgb(82, 183, 136);
            transition: 0.25s all ;
            padding: 10px 0 10px 0;
        }
            .box-right .form-group .btn-img:hover {
                background-color: white;
                border: 2px solid rgb(82, 183, 136);
                color: rgb(82, 183, 136);                
            }

</style>

<div class="box-title-1 mb-4">
    <h4>Thêm người dùng</h4>
</div>
<div class="box">

    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
    {
        //@Html.AntiForgeryToken()

        <div class="text-danger"></div>
        <div class="box-left col-sm-7 row">
            <div class="form-group col-12">
                <h6>Tên người dùng</h6>
                @*@Html.LabelFor(model => model.HoTen, "Họ tên", htmlAttributes: new { @class = "col-12" })*@
                <div class="col-12">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h6>Email</h6>
                @*@Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-6" })*@
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6">
                <h6>Số điện thoại</h6>
                @*@Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @class = "control-label col-12" })*@
                <div class="col-12">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h6>Mật khẩu</h6>
                @*@Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-12" })*@
                <div class="col-12">
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h6>Xác nhận mật khẩu</h6>
                @*@Html.LabelFor(model => model.ConfirmPassword, "Mật khẩu xác nhận", htmlAttributes: new { @class = "control-label col-12" })*@
                <div class="col-12">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h6>Chức vụ</h6>
                @*@Html.LabelFor(model => model.ChucVu, "Chức vụ", htmlAttributes: new { @class = "control-label col-12" })*@
                <div class="col-12">
                    <select asp-for="ChucVu" class="form-select">
                        <option value="0" selected>Chọn chức vụ</option>
                        <option value="1">Admin</option>
                        <option value="2">User</option>
                    </select>
                    @*@Html.EditorFor(model => model.ChucVu, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-check col-md-5 mb-4">
                <h6 class="form-label">Trạng thái</h6>
                <div>
                    <label class="form-check-label">
                        @Html.CheckBoxFor(model => model.TrangThai, new { @class = "form-check-input" }) Đang hoạt động
                    </label>
                </div>                                   
            </div>
        </div>

        <!--Phần hình-->
        <div class="box-right col-sm-3">
            <div class="form-group col-12">
                @*@Html.LabelFor(model => model.HinhAnh, "Hình ảnh", htmlAttributes: new { @class = "control-label col-md-6" })*@
                @*@Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control", @id = "image-holder2" } })*@

                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                @*<input class="form-control" type="file" id="upload-back" accept="image/*" />*@


                <div id="image-holder2">
                    <img class="user-img" src="~/images/final.png" style="width:250px;">
                </div>
                <label class="btn-img btn mt-4">
                    <i class="fa fa-image"></i>&nbsp; &nbsp; Chọn hình<input style="display:none;" class="form-control" type="file" id="upload-back" accept="image/*" />
                </label>
            </div>

        </div>


    }
</div>




<script>

    $(document).ready(function () {

    });

    $("#upfile").click(function () {
        $("#imgfile").trigger('click');
    });

    $('#upload-back').change(function (e) {
        var self = this;
        
        var file = e.target.files[0];
        const reader = new FileReader();
        reader.onloadend = () => {
            
            //var img = "<img src='" + reader.result + "' style='width: 100%'/>"
            var img = "<img src='" + reader.result + "' style='width: 250px; height: 250px; object-fit: cover; object-position: center center;'/>"

            $('#image-holder2').html(img);
        };
        reader.readAsDataURL(file);

    });

</script>

