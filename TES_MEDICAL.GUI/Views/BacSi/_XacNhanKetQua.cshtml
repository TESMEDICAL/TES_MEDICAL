<div class="col-12" style="padding-inline: 40px">
    <div class="row mb-3">
        <div class="col-sm-6">
            <h6>
                Tên bệnh nhân: 
                <strong>
                    @Model.MaBNNavigation.HoTen
                </strong> 

            </h6>
        </div>
        <div class="col-sm-3">
            <h6>Ngày khám: 
                <strong>@Model.NgayKham.ToString("dd/MM/yyyy")</strong> 
            </h6>
        </div>
        <div class="col-sm-3">
            <h6>Ngày tái khám
                <strong>@Model.NgayTaiKham?.ToString("dd/MM/yyyy")</strong>
