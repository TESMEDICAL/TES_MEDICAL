@model IPagedList<Thuoc>

@using X.PagedList.Mvc.Core;


@using X.PagedList;
@using X.PagedList.Web.Common
<div id="list">

    <div style="min-height:400px">
        <table class="table table-striped table-bordered text-center" style="width:100%">
            <thead style="border-bottom: 1px solid black;">
                <tr>

                    <th>

                        Tên thuốc
                    </th>

                    <th>

                        Vị trí
                    </th>

                    <th>

                        Đơn giá
                    </th>

                    <th>

                        Trạng thái
                    </th>

                    <th>

                        Hình ảnh
                    </th>

                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody class="tbody">
                @foreach (var item in ViewBag.Names as IEnumerable<Thuoc>)
                {
                    <tr>




                        <td>@item.TenThuoc</td>





                        <td>@item.Vitri</td>





                        <td>@item.DonGia.ToString("#,###")</td>








                        <td>@(item.TrangThai?"Hoạt động":"Không hoạt động")</td>





                        <td>
                            <img src="~/images/@item.HinhAnh" style="width:100px" />
                        </td>




                        <td class="text-nowrap"><a class="btn btn-info btn-sm active" onclick="_Detail('@item.MaThuoc')" title="Thông tin"> <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;Chi tiết</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div style="float:right">

        @{
            var pageRender = new PagedListRenderOptions
            {
                MaximumPageNumbersToDisplay = 5,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                DisplayLinkToLastPage = PagedListDisplayMode.Never,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayPageCountAndCurrentLocation = false,
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },


                ContainerDivClasses = new[] { "pagination-container" }


            };
        }
        @{
            var searchModel = ViewBag.Data as ThuocSearchModel;
        }


        @Html.PagedListPager((IPagedList<Thuoc>)ViewBag.Names, page => Url.Action("PageList", new { page, KeyWordSearch = searchModel.KeyWordSearch, TrangThai = searchModel.TrangThai}), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(pageRender, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "nameListContainer" }))
    </div>

</div>