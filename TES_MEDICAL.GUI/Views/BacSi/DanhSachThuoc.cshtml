<!--Model chính-->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">


            </div>
            <div class="modal-body">

                <div id="myModalContent">

                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
@section Scripts{
    <script>

        function OpenChiTietThuoc() {
            $.ajax({
                url: "/BacSi/ChiTietThuoc/",
                type: 'GET',
                success: function (response) {
                    $("#myModalContent").html(response);
                    $('#myModal').modal('show');
                    $('#btSave').show();
                    $('#btupdate').hide();

                }
            });
        }


        var $id = "";
        var $modal = $('#myModal');
        var $myModalContent = $("#myModalContent");
        var $modalins = $('#myModalins');
        var $myModalContentins = $("#myModalContentins");
        var $myModalTitle = $("#myModalTitle");
        var $myModalTitleins = $("#myModalTitleins");

        function reloadpage(page) {
            obj = {};

            obj.Page = page;
            $.ajax({
                url: '/BacSi/PageList/',

                type: "Get",
                timeout: 20000,

                async: false,

                data: obj,

                success: function (result) {


                    $('#nameListContainer').html(result);
                },

                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }

        $("#KeyWordSearch").keyup(function () {

            obj = {};

            obj.KeyWordSearch = $(this).val()

            obj.page = 1;
            $.ajax({
                url: '/BacSi/PageList/',

                type: "Get",


                data: obj,

                success: function (result) {

                    if (result.status != 2) {


                        $('#nameListContainer').html(result);
                    }

                    $('#nameListContainer').html(result);
                },

                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });




        });

        function Clear() {


            reloadpage(1);
        }

        function _Detail(id_) {
            $myModalContent.html("");

            $.ajax({
                url: '/BacSi/ChiTietThuoc/',

                type: "Get",
                timeout: 20000,

                async: true,
                data: {
                    id: id_
                },

                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').hide();
                    $('#btupdate').hide();
                    $('#btPrint').show();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }
    </script>

}



