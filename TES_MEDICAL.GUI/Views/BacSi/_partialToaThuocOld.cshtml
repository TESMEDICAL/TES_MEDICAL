@model ToaThuoc

<div class="pt-3">
    <h4 style="text-align:center; font-weight:bold">Toa Thuốc</h4>
    <hr />
</div>

<div class="modal-body">
    <div class="col-8 m-auto">
        <table class="table table-bordered" id="danhSach" style="width:100%">
            <thead>
                <tr>

                    <th class="col-8">Tên thuốc</th>
                    <th class="col-4 text-center">Thao tác</th>
                    <th class="d-none"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Thuoc as IEnumerable<Thuoc>)
                {
                    <tr>

                        <td>@item.TenThuoc</td>
                        <td class="text-center"><button class="btn btn-success btn-sm addThuoc" style="border-radius: 60px;"><i class="fas fa-plus"></i></button> | <button class="btn-info btn btn-sm active " onclick="_Detail('@item.MaThuoc')" style="border-radius: 60px;"><i class="fa fa-info-circle"></i></button></td>
                        <td class="d-none">@item.MaThuoc</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="mt-5">
        <table class="table table-striped">
            <thead class="bg-success text-light">
                <tr>
                    <th class="col-8">Tên thuốc</th>
                    <th class="col-2">Số lượng</th>
                    <th class="col-2">Thao tác</th>

                </tr>
            </thead>
            <tbody id="listToaThuoc">
                @foreach (var item in Model.ChiTietToaThuoc)
                {
                    <tr>
                        <th class="col-8">
                            <input style="display:none" name="MaThuoc" value="@item.MaThuoc" />
                            <h6 style="margin-inline: 20px; font-weight:bold;" name="TenThuoc">@item.MaThuocNavigation.TenThuoc</h6>
                            <div class="row" style="margin-inline: 20px;">
                                <div class="mb-2 col-sm-4">
                                    <label for="">Ngày uống <input style="width: 25%" type="number" class="form-control;" value="@item.LanTrongNgay" name="LanTrongNgay"> lần.</label>
                                </div>
                                <div class="mb-2 col-sm-4">
                                    <label for="">Mỗi lần <input style="width: 25%" type="number" class="form-control;" value="@item.VienMoiLan" name="VienMoiLan"> viên.</label>
                                </div>
                                <div class="form-check col-sm-4 mb-2">
                                    <input class="form-check-input" type="checkbox"  name="TruocKhian" value="" @(item.TruocKhian?"checked":"")>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Uống trước khi ăn
                                    </label>
                                </div>
                                <div class="form-check col-sm-4 mb-2">
                                    <input class="form-check-input" type="checkbox" value="" name="Sang"  @(item.Sang?"checked":"")>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Uống sáng
                                    </label>
                                </div>
                                <div class="form-check col-sm-4 mb-2">
                                    <input class="form-check-input" type="checkbox" value="" name="Trua"  @(item.Trua?"checked":"")>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Uống trưa
                                    </label>
                                </div>
                                <div class="form-check col-sm-4 mb-2">
                                    <input class="form-check-input" type="checkbox" value="" name="Chieu"  @(item.Chieu?"checked":"")>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Uống tối
                                    </label>
                                </div>
                            </div>
                        </th>
                        <th class="col-2">
                            <div class="input-group mb-3">
                                <input type="number" placeholder="Số lượng..." class="form-control" value="@item.SoLuong" name="SoLuong">
                            </div>
                        </th>
                        <th class="col-2 text-center"><button class="btn btn-danger deleteThuoc"><i class="fa fa-trash"></i></button></th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">

    <button type="button" class="btn btn-success" style="margin-left: 5px;" data-bs-dismiss="modal" onclick="ConfirmToaThuoc()">OK</button>
</div>

