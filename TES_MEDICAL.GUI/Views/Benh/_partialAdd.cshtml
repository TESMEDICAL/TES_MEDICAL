<div class="wrapper p-3">
    <div class="wrapper-title-1 mb-4">
        <h4>Thêm nhân viên y tế</h4>
    </div>
    <div class="wrapper-background ">
        @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
        {
            <div class="main-left col-sm-4">
                <div class="main-left-title">
                    <div class="main-left-label">
                        <label class="form-label">Tên bệnh</label>
                    </div>
                    <div class="main-left-input">
                        @Html.EditorFor(model => model.TenBenh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenBenh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="main-left-title">
                    <div class="main-left-label">
                        <label class="form-label">Chuyên khoa</label>
                    </div>
                    <div class="main-left-select">
                        @Html.DropDownList("MaCK", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaCK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="main-right col-sm-7">
                <div class="main-right-infomation">
                    <div class="main-right-lable">
                        <label class="form-label">Thông tin bệnh</label>
                    </div>
                    <div class="main-right-textarea">
                        <textarea class="form-control" placeholder="Nhập thông tin bệnh ..." id="ThongTin" name="ThongTin" style="height: 100px"></textarea>
                        @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="text-danger"></div>



            @*<div class="form-group col-md-7" style="margin-left: 100px">
                @Html.LabelFor(model => model.TenBenh, "Tên Bệnh", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                </div>
            </div>*@

            @*<div class="form-group col-md-4" style="margin-left: -40px">
