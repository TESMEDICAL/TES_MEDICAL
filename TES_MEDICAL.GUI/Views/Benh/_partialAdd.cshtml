

@model TES_MEDICAL.GUI.Models.Benh

<style>
    .wrapper {
        font-family: Arial;
    }

    .wrapper-top {
        background-color: white;
    }

    .wrapper-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .wrapper-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    .wrapper-left {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        margin-left: 40px;
        margin-right: 30px;
    }

    .wrapper-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -15px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .wrapper-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .wrapper-right {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .wrapper-bottom {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .wrapper-button button {
        background-color: rgb(82, 183, 136);
        color: white;
    }
</style>


<div class="wrapper p-3">
    <div class="wrapper-title-1 mb-4">
        <h4>Thêm thông tin bệnh</h4>
    </div>
    <div class="wrapper-top ">
        @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="wrapper-left col-sm-4">
                <div class="wrapper-left-title">
                    <div class="wrapper-label">
                        <label class="form-label">Tên bệnh</label>
                    </div>
                    <div class="wrapper-left-input mt-3 mb-3">
                        @Html.EditorFor(model => model.TenBenh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenBenh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="wrapper-left-title">
                    <div class="wrapper-label">
                        <label class="form-label">Chuyên khoa</label>
                    </div>
                    <div class="wrapper-left-select mt-3 mb-3">
                        @Html.DropDownList("MaCK", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaCK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="wrapper-right col-sm-7">
                <div class="wrapper-right-infomation">
                    <div class="wrapper-label">
                        <label class="form-label">Thông tin bệnh</label>
                    </div>
                    <div class="wrapper-right-textarea mt-3 mb-3">
                        <textarea class="form-control" placeholder="Nhập thông tin bệnh ..." id="ThongTin" name="ThongTin" style="height: 150px"></textarea>
                        @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="text-danger"></div>



            @*<div class="form-group col-md-7" style="margin-left: 100px">
                @Html.LabelFor(model => model.TenBenh, "Tên Bệnh", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                </div>
            </div>*@

            @*<div class="form-group col-md-4" style="margin-left: -40px">
                @Html.LabelFor(model => model.MaCK, "Chuyên Khoa", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">

                </div>
            </div>

            <div class="form-group col-12" style="margin-left: 100px">
                @Html.LabelFor(model => model.ThongTin, "Thông tin", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="form-floating col-md-10">
                    <textarea class="form-control" placeholder="Nhập thông tin bệnh ..." id="ThongTin" name="ThongTin" style="height: 100px"></textarea>
                    @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                </div>
            </div>*@
        }
    </div>




    <div class="wrapper-bottom mt-5">

        <div class="d-flex justify-content-between mb-3 p-2">
            <div class="wrapper-label">
                <label class="form-label">Triệu chứng</label>
            </div>
            <div class="wrapper-button mt-2">
                <button type="button" class="btn" style="background-color: seagreen; height: 40px;" id="AddCTTrieuChung" onclick="AddView('CTTrieuChung')"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Chi tiết triệu chứng</button>
            </div>
        </div>
        <table class="table table table-striped text-left w-100 p-2 mb-3" id="tableCTTrieuChung">
            <thead class="align-middle">
                <tr>
                    <th class="col-5">
                        Tên triệu chứng
                    </th>
                    <th class="col-5">

                        Chi tiết triệu chứng
                    </th>
                    <th class="text-center col-2"> Thao tác  </th>
                </tr>
            </thead>

            <tbody class="tbody" id="partialCTTrieuChung">
            </tbody>
        </table>




    </div>

</div>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }





