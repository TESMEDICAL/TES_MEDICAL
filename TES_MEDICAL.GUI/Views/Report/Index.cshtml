<title>How to create bootstrap charts using bootstrap 5</title>
<style>
    .box {
        display: flex;
        flex-wrap: wrap;
    }

    .box-item {
        width: calc(50% - 10px);
        background-color: white;
        font-family: Arial;
        height: 350px;
        margin-left: 10px;
        margin-bottom: 10px;
    }

    .box-item-title {
        background-color: rgb(233, 236, 239);
        height: 40px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px
    }

        .box-item-title h6 {
            padding: 10px;
            font-weight: 600;
            color: rgb(108, 117, 125);
        }

    .box-option {
        margin-left: 23px;
    }

        .box-option .form-check {
            margin-left: 15px;
        }

    .input-group {
        display: flex;
        flex-wrap: nowrap;
        margin-left: -7px;
    }

        .input-group .input-group-item {
            width: calc(50% - 30px);
            margin-left: 30px;
        }
</style>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
<body>
    <div class="box">
        <div class="box-item">
            <div class="box-item-title mb-4">
                <h6>Biểu đồ tròn</h6>
            </div>
            <div id="chartContainer1" style="height: 270px; width: auto"></div>

        </div>
        <div class="box-item">
            <div class="box-item-title mb-4">
                <h6>Biểu đồ cột</h6>
            </div>
            <div id="chartContainer" style="height: 270px; width: auto"></div>
        </div>
        <div class="box-item">
            <div class="box-item-title mb-4">
                <h6>Lựa chọn</h6>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-item">
                    <p>Ngày bắt đầu:</p>
                    <input id="ngayBatDau" type="date" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <div class="input-group-item ms-3">
                    <p>Ngày kết thúc:</p>
                    <input id="ngayKetThuc" type="date" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="box-option">
                <p>Chọn mục thống kê:</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="tongDoanhThu" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Tổng doanh thu
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="thuoc" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Thuốc
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="dichVu" checked>
                    <label onchange="ReportDichVu" class="form-check-label" for="flexRadioDefault2">
                        Dịch vụ
                    </label>
                </div>
            </div>
        </div>
        <div class="box-item" style="overflow: scroll; overflow-x: hidden">
            <div class="box-item-title mb-4">
                <h6>Thông tin</h6>
            </div>
            <div >
                <table class="table">
                    <thead class="table-head-fixed">
                        <tr>
                            <th scope="col">Năm</th>
                            <th scope="col">Tháng</th>
                            <th scope="col">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody id="BieuDoCot">
                        @*<tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>1</td>
                </tr>*@
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</body>

@section scripts{
    <script>
        $(".table").hide();
        $('input[type=radio][name=flexRadioDefault]').change(function () {

            if (this.value == 'dichVu') {
                $.ajax({
                    url: "/Report/ThongKeDichVuAction/",
                    type: 'GET',
                    data: {
                        ngayBatDau: $('#ngayBatDau').val(),
                        ngayKetThuc: $('#ngayKetThuc').val()
                    },

                    success:
                        /*Biểu đồ cột*/
                        function (response) {
                            var chart = new CanvasJS.Chart("chartContainer", {
                                animationEnabled: true,
                                theme: "light2",
                                exportEnabled: true,
                                data: [{
                                    type: "column",
                                    dataPoints: response.dataPoints
                                }]
                            });
                            chart.render();

                            /*Biểu đồ tròn*/
                            var chart = new CanvasJS.Chart("chartContainer1", {
                                theme: "light1", // "light1", "light2", "dark1", "dark2"
                                exportEnabled: true,
                                animationEnabled: true,
                                data: [{
                                    type: "pie",
                                    startAngle: 180,
                                    toolTipContent: "<b>{label}</b>: {y}%",
                                    showInLegend: "true",
                                    legendText: "{label}",
                                    indexLabel: "{label} - {y} VNĐ",
                                    dataPoints: response.dataPoints
                                }]
                            });
                            chart.render();



                            $("#BieuDoCot").html("");
                            $(".table").show();
                            (response.dataTable.obj).forEach(function (item) {

                                $("#BieuDoCot").append(`
                            <tr>
                                <td>${item.nam}</td>
                                <td>${item.thang}</td>
                                <td>${item.tongTien}</td>
                            </tr>
                        `)
