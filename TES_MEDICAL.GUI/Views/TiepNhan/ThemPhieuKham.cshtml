@model PhieuKhamViewModel
@{
    ViewData["Title"] = "ThemPhieuKham";
    Layout = "~/Views/Shared/LayoutMain/MainLayout.cshtml";
    var bn = new BenhNhan();
    if (ViewBag.BenhNhan != null)
    {
        bn = ViewBag.BenhNhan as BenhNhan;
    }


    var NgaySinh = bn.NgaySinh?.ToString("yyyy-MM-dd");

}


<form class="row" id="frm">
    <div class="col-md-6">
        <!-- Basic Form Elements Block -->
        <div class="block">
            <!-- Basic Form Elements Title -->
            <div class="block-title">               
                <h2><strong>Thông tin cá nhân</strong></h2>
            </div>
            <!-- END Form Elements Title -->
            <!-- Basic Form Elements Content -->
            <div  class="form-horizontal form-bordered">
                <div class="row g-2 align-items-center m-1">
                    <div class="col-2">
                        <label for="Hoten" class="col-form-label">Họ tên</label>
                    </div>
                    <div class="col-10">
                        <input type="text" asp-for="HoTen" class="form-control" placeholder="Vui lòng nhập họ tên">
                    </div>
                </div>
                <div class="row g-2 align-items-center m-1">
                    <div class="col-2">
                        <label for="Hoten" class="col-form-label">SĐT</label>
                    </div>
                    <div class="col-10">
                        <input type="number" asp-for="SDT"  class="form-control" placeholder="Vui lòng nhập số điện thoại">
                    </div>
                </div>

                <div class="row g-2 align-items-center m-1">
                    <div class="col-2">
                        <label for="NgaySinh" class="col-form-label">Ngày sinh</label>
                    </div>
                    <div class="col-10">
                        <input type="date" value="@(NgaySinh)" asp-for="NgaySinh"  class="form-control">
                    </div>
                </div>
                <div class="row g-2 align-items-center m-1">
                    <div class="col-2">
                        <label for="Hoten" class="col-form-label">Giới tính</label>
                    </div>
                    <div class="col-10">
                        <!-- <select id="example-select" name="example-select" class="form-control" size="1">
                            <option value="0">Nam</option>
                            <option value="1">Nữ</option>
                        </select> -->
                        <select style="font-size: 13px;" class="form-select" asp-for="GioiTinh">
                            <option value="0">Nam</option>
                            <option value="1">Nữ</option>

                        </select>
                    </div>
                </div>

                <div class="row g-2 align-items-center m-1">
                    <div class="col-2">
                        <label for="DiaChi" class="col-form-label">Địa chỉ</label>
                    </div>
                    <div class="col-10">
                        <textarea type="textarea" asp-for="DiaChi" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <!-- END Basic Form Elements Content -->
        </div>
        <!-- END Basic Form Elements Block -->
    </div>

    <div class="col-md-6">
        <!-- Basic Form Elements Block -->
        <div class="block">
            <!-- Basic Form Elements Title -->
            <div class="block-title">
                <h2><strong>Thông tin bệnh</strong></h2>
            </div>
            <!-- END Form Elements Title -->
            <!-- Basic Form Elements Content -->
            <div  class="form-horizontal form-bordered p-0">
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Chuyên khoa</label>
                        <select id="MaCK" style="font-size: 13px;" class="form-select" asp-items="@ViewBag.ListCK">
                            <option value="">Chọn chuyên khoa</option>
                        </select>

                    </div>
                    <div class="col-md-6">
                        <label for="inputPassword4" class="form-label">Bác sĩ</label>
                        <select style="font-size: 13px;" class="form-select" asp-for="MaBS">
                            <option value="">Chọn bác sĩ</option>

                        </select>
                    </div>
                    <div class="col-12">
                        <div class="col-2">
                            <label for="TrieuChung" class="col-form-label">Triệu chứng</label>
                        </div>
                        <div class="col-12">
                            <textarea type="textarea" asp-for="TrieuChung" class="form-control" style="height: 128px;"></textarea>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<div class="col-12">
    <div class="block">

        <div class="form-group" style="float:right">
            <button class="btn" style="background-color:seagreen; color:white;" onclick="OpenThemDichVu()"><i class="fa fa-plus text-white"></i>  Thêm dịch vụ</button>

        </div>
        <div class="form-group">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Dịch vụ</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="listDV">

                    <tr>

                        <td>
                            Chưa có dịch vụ nào
                        </td>
                    </tr>

                </tbody>
            </table>
            <div class="form-group" style="text-align:right">
                <!-- @*<button type="submit" class="btn btn-primary"><i class="far fa-credit-card "></i> Thanh toán</button>*@ -->
                <button type="submit" class="btn btn-primary" onclick="OpenXacNhanDV()"><i class="fa fa-check"></i> Xác nhận</button>
                <button type="reset" class="btn btn-warning"><i class="fa fa-repeat"></i> Huỷ</button>
                
            </div>
        </div>




    </div>
</div>



<!--Model chính-->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">

                <div class="modal-title" style="font-size: 17px;text-transform:uppercase;color:#3c8dbc"><strong id="myModalTitle"></strong></div>
            </div>
            <div class="modal-body">

                <div id="myModalContent">
                    
                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                   
                    <button type="button" id="btCheckOut" @*onclick="ThanhToan()"*@ class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Thanh Toán</button>
                    
                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>
<div id="modalDV" class="modal fade">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">

                <div class="modal-title" style="font-size: 17px;text-transform:uppercase;color:#3c8dbc"><strong id="myModalTitle"></strong></div>
            </div>
            <div class="modal-body">

                <div id="myModalContent">
                    <partial name="_AddDichVu" model="@ViewBag.ListDV" />
                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">


                    <button type="button" class="btn btn-success btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>
        var listdv = [];
        var obj = {};
        //Hàm mở modal của thêm dịch vụ
        function OpenThemDichVu() {

            $.ajax({
                url: "/TiepNhan/GetListDV/",
                type: 'GET',
                success: function (response) {
                    $("#myModalContent").html(response);
                    $('#myModal').modal('show');
                    $('#btSave').show();
                    $('#btCheckOut').hide();

                }
            });
        }



        //Hàm mở modal của nút xác nhận
        function OpenXacNhanDV() {
            obj = {}
            obj = $("#frm").serializeObject();
            listdv = [];
            $("#listDV > tr").each(function () {
                $tr = $(this)
                var $td = $tr.find("td");
                listdv.push({ MaDV: $td.eq(0).text()})

            });
            obj.dichVus = listdv


            $.ajax({
                url: "/TiepNhan/XacNhanDichVu/",
                type: 'POST',


                async: true,
                data: obj,


                success: function (response) {
                    $("#myModalContent").html(response);
                    $('#myModal').modal('show');
                    $('#btSave').hide();
                    $('#btCheckOut').show();

                }
            });
        }

        function SaveDichVu() {
            obj = {}
            var s = '';



            $("#table_dichvu > tbody > tr").each(function (i) {
                $tr = $(this)
                if ($tr.find(".form-check-input").is(":checked")) {

                    var $td = $tr.find("td");



                    s += `<tr><th scope="row">${i}</th><td style="display:none">${$td.eq(0).text()}</td><td>${$td.eq(1).text()}</td><td>${$td.eq(2).text()}</td><td><button class="btn btn-danger btn-sm remove"> <i class="fa fa-trash"></i></button></td></tr>`;


                }

                $("#listDV").html(s);
            });

        }
        
        $("#btCheckOut").click(function () {
            $(this).prop("disabled", true);

            $(this).html(
                '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span><span> Waiting</span>'
            );
            $.ajax({
                type: "POST",
                url: "/TiepNhan/FinalCheckOut/",
                data: obj,
                success: function (result) {
                    $('#preloader-wrapper').toggleClass('hide');
                    if (result.status >= 1) {

                        toastr.success(result.text);
                        window.location.href = result.redirectUrL;
                    }
                    else {
                        toastr.warning(result.text);

                    }
                },
                error: function (errormessage) {
                    //alert(errormessage.responseText);
                    $(this).prop("disabled", false);

                    $(this).html(
                        'Retry');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        });
        //function ThanhToan() {
        //    $.ajax({
        //        type: "POST",
        //        url: "/TiepNhan/FinalCheckOut/",
        //        data: obj,
        //        success: function (result) {
        //            $('#preloader-wrapper').toggleClass('hide');
        //            if (result.status >= 1) {

        //                toastr.success(result.text);
        //                window.location.href = result.redirectUrL;
        //            }
        //            else {
        //                toastr.warning(result.text);

        //            }
        //        },
        //        error: function (errormessage) {
        //            alert(errormessage.responseText);
        //        },
        //        failure: function (message) {
        //            $('#preloader-wrapper').toggleClass('hide');
        //        }
        //    });
        //}
        $("#MaCK").change(function () {

            var id = $(this).val();

            $("#MaBS").empty();
            $.get("/tiepnhan/DocTor_Bind", { MaCK: id }, function (data) {
                var v = "<option>Chose...</option>";
                $.each(data, function (i, v1) {
                    v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";
                });
                $("#MaBS").html(v);
            });

        });
        $(document).on('click', '.remove', function () {

            $(this).parent().parent().remove();

        });




    </script>

}
