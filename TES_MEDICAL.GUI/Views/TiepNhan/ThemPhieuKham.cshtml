                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="example-email-input">Ngày sinh</label>
                    <div class="col-md-9">
                        <input type="date" id="example-email-input" name="example-email-input" class="form-control" placeholder="Enter Email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="example-password-input">Giới tính</label>
                    <div class="col-md-9">
                        <select id="example-select" name="example-select" class="form-control" size="1">
                            <option value="0">Nam</option>
                            <option value="1">Nữ</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" for="example-textarea-input">Địa chỉ</label>
                    <div class="col-md-9">
                        <textarea id="example-textarea-input" name="example-textarea-input" rows="3" class="form-control" placeholder="Content.."></textarea>
                    </div>
                </div>
            </form>
            <!-- END Basic Form Elements Content -->
        </div>
        <!-- END Basic Form Elements Block -->
    </div>

    <div class="col-md-6">
        <!-- Basic Form Elements Block -->
        <div class="block">
            <!-- Basic Form Elements Title -->
            <div class="block-title">
                <div class="block-options pull-right">
                    <a href="javascript:void(0)" class="btn btn-alt btn-sm btn-default toggle-bordered enable-tooltip" data-toggle="button" title="Toggles .form-bordered class">No Borders</a>
                </div>
                <h2><strong>Thông tin bệnh</strong></h2>
            </div>
            <!-- END Form Elements Title -->
            <!-- Basic Form Elements Content -->
            <form enctype="multipart/form-data" class="form-horizontal form-bordered p-0" onsubmit="return false;">
                <div class="form-group">
                    <div class="col-sm-6">
                        <label class="col-md-5 control-label" for="example-select">Chuyên khoa</label>
                        <div class="col-md-7">
                            <select id="example-select" name="example-select" class="form-control" size="1">
                                <option value="0">Khoa nội</option>
                                <option value="1">Tim Mạch</option>

                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label class="col-md-5 control-label" for="example-select">Bác sĩ</label>
                        <div class="col-md-7">
                            <select id="example-select" name="example-select" class="form-control" size="1">
                                <option value="0">Dr. Bảo Dương</option>
                                <option value="1">Dr. Thanh Hoàng</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="padding-inline: 38px;">
                    <label class="col-3 control-label" for="example-textarea-input">Triệu chứng</label>
                    <div class="col-6">
                        <textarea id="example-textarea-input" name="example-textarea-input" rows="12" class="form-control" placeholder="Content.."></textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-12">
    <div class="block">

        <div class="form-group" style="float:right">
            <button class="btn" style="background-color:seagreen; color:white;" onclick="OpenThemDichVu()"><i class="fa fa-plus text-white"></i>  Thêm dịch vụ</button>

        </div>
        <div class="form-group">
            <table class=" table table-striped">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Dịch vụ</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Khám tổng quát</td>
                        <td>150.000 VNĐ</td>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">1</th>
                        <td>Khám tổng quát</td>
                        <td>150.000 VNĐ</td>
                        <td></td>
                    </tr>
                    <tr>
                        <th></th>
                        <td></td>
                        <td></td>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group" style="text-align:right">
                @*<button type="submit" class="btn btn-primary"><i class="far fa-credit-card "></i> Thanh toán</button>*@
                <button type="submit" class="btn btn-primary" onclick="OpenXacNhanDV()"><i class="fa fa-check"></i> Xác nhận</button>
                <button type="reset" class="btn btn-warning"><i class="fa fa-repeat"></i> Huỷ</button>
            </div>
        </div>




    </div>
</div>

<!--Model chính-->
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">

                <div class="modal-title" style="font-size: 17px;text-transform:uppercase;color:#3c8dbc"><strong id="myModalTitle"></strong></div>
            </div>
            <div class="modal-body">

                <div id="myModalContent" class="modal-fullscreen">

                </div>
            </div>


            <div class="modal-footer">
                <div class="text-right">
                    <button type="button" id="btSave" class="btn btn-sm btn-success"><i class="far fa-credit-card"></i>&nbsp;Thanh toán</button>
                    <button type="button" id="btupdate" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Cập nhật</button>

                    <button type="button" class="btn btn-danger btn-sm" id="btclose" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>

<script>

    //Hàm mở modal của thêm dịch vụ
    function OpenThemDichVu() {
        $.ajax({
            url: "/TiepNhan/ThemDichVu/",
            type: 'GET',
            success: function (response) {
                $("#myModalContent").html(response);
                $('#myModal').modal('show');
                $('#btSave').show();
                $('#btupdate').hide();

            }
        });
    }

    //Hàm mở modal của nút xác nhận
    function OpenXacNhanDV() {
        $.ajax({
            url: "/TiepNhan/XacNhanDichVu/",
            type: 'GET',
            success: function (response) {
                $("#myModalContent").html(response);
                $('#myModal').modal('show');
                $('#btSave').show();
                $('#btupdate').hide();
                $('#myModalContent').removeClass("modal-fullscreen");
            }
        });
    }


</script>