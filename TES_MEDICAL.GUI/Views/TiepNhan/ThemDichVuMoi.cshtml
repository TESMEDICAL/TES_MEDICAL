
@{
    ViewData["Title"] = "THÊM DỊCH VỤ MỚI";
    Layout = "~/Views/Shared/LayoutMain/MainLayout.cshtml";

}

<form class="row" id="frm">
    <div class="col-md-6">
        <!-- Basic Form Elements Block -->
