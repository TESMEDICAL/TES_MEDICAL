@model PhieuKhamViewModel
<style>
    #table1 td {
        width: 100px !important;
    }
</style>

<h4 style="text-align:center; font-weight:bold">XÁC NHẬN THÔNG TIN</h4>

<hr />
<br />

<div class="row">
    <table class="table table-borderless" id="table1">
        <tbody>
            <tr style="width: 50px;">
                <td style="font-weight:bold;">Tên bệnh nhân</td>
                <td>@Model.HoTen</td>
                <td style="font-weight:bold;">Số điện thoại</td>
                <td>@Model.SDT</td>
            </tr>
            <tr>
                <td style="font-weight:bold;">Ngày sinh</td>
                <td>@Model.NgaySinh?.ToString("dd/MM/yyyy")</td>
                <td style="font-weight:bold;">Địa chỉ</td>
                <td>@Model.DiaChi</td>
            </tr>

            <tr>
                <td style="font-weight:bold;">Triệu chứng</td>
                <td>@Model.TrieuChung</td>
                <td style="font-weight:bold;">Bác sĩ</td>
                <td>@ViewBag.BacSi.HoTen</td>
            </tr>
        </tbody>
    </table>
</div>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Dịch vụ</th>
            <th scope="col">Đơn giá</th>
          
        </tr>
    </thead>
    <tbody>


        @for(int i =0;i<Model.dichVus.Count;i++)
        {
        <tr style="width: 50px;">
            <td>@(i+1)</td>
            <td>@Model.dichVus.ElementAt(i).TenDV</td>
            <td>@Model.dichVus.ElementAt(i).DonGia VNĐ</td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <table class="table table-borderless" id="table1">
        <tbody>
          


        </tbody>
    </table>
</div>
<div id="TongTien" style="text-align:right">
    <h4 style="color:seagreen; font-weight:bold">Tổng tiền : 1.050.000 VNĐ</h4>
</div>
