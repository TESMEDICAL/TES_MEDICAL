

@model TES_MEDICAL.GUI.Models.TinTucSearchModel
@using X.PagedList;
@using TES_MEDICAL.GUI.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutAdmin/LayoutAdmin.cshtml";
}
<style>
    .main {
        background-color: white;
        font-family: Arial
    }
    .main-title {
        background-color: lightgray;
        height: 40px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px
    }
        .main-title h6 {
            padding: 10px;
        }
    .header-left{
        left: 0 auto;
    }
    .header-right{
        padding-right: 25px;
        margin-inline-start: auto;
        text-align: right;
    }
    .header-btn a {
        background-color: rgb(82, 183, 136);
        color: white;
        box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
    }
        .header-btn a:hover {
            background-color: rgb(118, 200, 147);
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            transform: scale(1.1)
        }
    .form-check{
        margin-right: 25px;
    }
    .name-list{
        padding-inline: 15px;
    }
</style>





<div class="main m-3">
    <div class="main-title mb-4" style="">
         <h6>Quản lý trang chủ</h6>   
    </div>

    <div class="header row">

        @using (Html.BeginForm(null, null, FormMethod.Get, new { name = "frmSearch", id = "frmSearch", enctype = "multipart/form-data", @class = "d-flex flex-wrap m-2" }))
        {
            @Html.AntiForgeryToken()

        <div class="header-left col-sm-8 row">
            <div class="header-input-1 col-3">
                <input type="text" class="form-control" asp-for="TieuDeSearch" placeholder="Nhập tiêu đề..." aria-label="Username" aria-describedby="basic-addon1">
                @*@Html.EditorFor(model => model.TieuDeSearch, new { htmlAttributes = new { @class = "mr-2 mb-2 form-control-sm", @placeholder = "Lọc theo tiêu đề" } })*@
            </div>

            <div class="header-input-2 col-3">
                <input type="text" class="form-control" asp-for="TrangThaiSearch" placeholder="Nhập trạng thái ..." aria-label="Username" aria-describedby="basic-addon1">
                @*@Html.EditorFor(model => model.TrangThaiSearch, new { htmlAttributes = new { @class = "mr-2 mb-2 form-control-sm", @placeholder = "Lọc theo trạng thái" } })*@
            </div>

            <div class="header-dropdown col-3">

                @*@Html.EditorFor(model => model.MaTLSearch, new { htmlAttributes = new { @class = "mr-2 mb-2 form-control-sm", @placeholder = "Lọc theo mã thể loại" } })*@
                @Html.DropDownListFor(model => model.MaTLSearch, new SelectList(@ViewBag.MaTL, "MaTL", "TenTL"), "Lọc theo thể loại", new { @class = "mr-2 mb-2 form-control-sm" })
            </div>
            <div class="header-btn col-3">
                <a class="btn" onclick="Timkiem()" id="btSeach"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Tìm kiếm</a>
            </div>
        </div>
        <div class="header-right col-sm-4 row">
            <div class="header-btn col-7">
                <a class="btn" href="/tintuc/themtintuc" id="btCreateN"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Tạo mới</a>
            </div>
            <div class="header-btn col-5">
                <a class="btn" onclick="Clear()" id="btSeach"><i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;Làm mới</a>
            </div>
        </div>
            
            


        }

    </div>
    <div id="nameListContainer" class="mt-3">
        <div class="form-check ms-auto mb-3 text-right">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
            <label class="form-check-label" for="flexCheckChecked">
                Hiện tất cả
            </label>
        </div>
        <div class="name-list">
            <partial name="_NameListPartial" model="ViewBag.Names as IPagedList<TinTuc>" />
        </div>
    </div>
</div>





<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">


            </div>
            <div class="modal-body">

                <div id="myModalContent">

                </div>
            </div>


            <div class="modal-footer">
                <div class="modal-footer-btn text-right">
                    <button type="button" id="btSave" class="btn btn-sm"><i class="fa fa-save" style="background-color: rgb(82, 183, 136);"></i>&nbsp;Lưu</button>
                    <button type="button" id="btupdate" class="btn btn-sm"><i class="fa fa-save" style="background-color: rgb(82, 183, 136);"></i>&nbsp;Cập nhật</button>
                    <button type="button" id="btPrint" class="btn btn-sm" onclick="PrintPreview('pannelTinTuc')" style="background-color: rgb(22, 138, 173)"><i class="fa fa-print" aria-hidden="true"></i>&nbsp;In</button>
                    <button type="button" class="btn btn-sm" id="btclose" data-bs-dismiss="modal"><i class="fa fa-close" style="background-color: rgb(239, 71, 111);"></i>&nbsp;Đóng</button>
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>

        var $id = "";
        var $modal = $('#myModal');
        var $myModalContent = $("#myModalContent");
        var $modalins = $('#myModalins');
        var $myModalContentins = $("#myModalContentins");
        var $myModalTitle = $("#myModalTitle");
        var $myModalTitleins = $("#myModalTitleins");
        $(document).ready(

            function () {

                $("#btSave").click(function () {
                    var obj = $("#frm").serializeObject();


                    $.ajax({
                        type: "POST",
                        url: "/TinTuc/Add",
                        data: obj,
                        success: function (result) {
                            $('#preloader-wrapper').toggleClass('hide');
                            if (result.status >= 1) {

                                toastr.success(result.text);
                                reloadpage(1);
                            }
                            else {
                                toastr.warning(result.text);
                            }
                        },
                        error: function (errormessage) {
                            alert(errormessage.responseText);
                        },
                        failure: function (message) {
                            $('#preloader-wrapper').toggleClass('hide');
                        }
                    });



                });
                $("#btupdate").click(function () {
                    var obj = $("#frm").serializeObject();
                    $.ajax({
                        type: "POST",
                        url: "/TinTuc/Edit",
                        dataType: "json",
                        data: obj,
                        success: function (result) {
                            $('#preloader-wrapper').toggleClass('hide');
                            if (result.status >= 1) {
                                toastr.success(result.text);
                                reloadpage(1);
                            }
                            else {
                                toastr.warning(result.text);
                            }
                        },
                        error: function (errormessage) {
                            alert(errormessage.responseText);
                        },
                        failure: function (message) {
                            $('#preloader-wrapper').toggleClass('hide');
                        }
                    });


                });
                $("#btclose").click(function () {

                    /*reloadpage(1);*/
                });
                $("#btcloseins").click(function () {

                    reloadpage(1);
                });



            });

        $(document).on('click', '.remove', function () {

            $(this).parent().parent().remove();

        });

        function AddView(child) {

            $.ajax({
                url: '/TinTuc/add' + child,

                success: function (data) {
                    $("#partial" + child).append(data);
                }
            })
        }

        function reloadpage(page) {
            obj = {};

            obj.Page = page;
            $.ajax({
                url: '/TinTuc/PageList/',

                type: "Get",
                timeout: 20000,

                async: false,

                data: obj,

                success: function (result) {


                    $('#nameListContainer').html(result);
                },

                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }


        function PrintPreview(id) {
            $.print("#" + id);
        }

        //function Edit(id_) {
