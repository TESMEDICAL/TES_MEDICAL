        //            $('#preloader-wrapper').toggleClass('hide');
        //        },
        //        failure: function (message) {
        //            $('#preloader-wrapper').toggleClass('hide');
        //        }
        //    });
        //}


        function Create() {

            $myModalContent.html("");

            $.ajax({
                url: '/TinTuc/Add/',

                type: "Get",
                timeout: 20000,

                async: true,


                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').show();
                    $('#btupdate').hide();
                    $('#btPrint').hide();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });

        }

        function _Detail(id_) {
            $myModalContent.html("");

            $.ajax({
                url: '/TinTuc/Detail/',

                type: "Get",
                timeout: 20000,

                async: true,
                data: {
                    id: id_
                },

                success: function (result) {
                    $myModalContent.html(result);
                    $('#btSave').hide();
                    $('#btupdate').hide();
                    $('#btPrint').hide();
                    $modal.modal('show');


                    $('#preloader-wrapper').toggleClass('hide');
                },
                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }



        function _delete(id) {
            var cf = confirm('Bạn muốn xoá bản ghi này?');
            if (cf) {
                $.ajax({
                    type: "POST",
                    url: "/TinTuc/Delete",
                    data: { "id": id },
                    success: function (result) {
                        $('#preloader-wrapper').toggleClass('hide');
                        if (result.status >= 1) {
                            toastr.success(result.text);

                            reloadpage();
                        }
                        else {
                            toastr.warning(result.text);
                        }
                    },
                    error: function (errormessage) {
                        toastr.warning(errormessage.responseText);
                    },
                    failure: function (message) {
                        $('#preloader-wrapper').toggleClass('hide');
                    }
                });
            }

        }

        function Timkiem() {


            $.ajax({
                url: '/TinTuc/PageList/',

                type: "Get",
                timeout: 20000,
                async: false,
                data: $("#frmSearch").serialize(),


                success: function (result) {


                    if (result.status == -2) {
                        toastr.success(result.text);

                    }
                    else {

                        $('#nameListContainer').html(result);
                    }


                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                },


                failure: function (message) {
                    $('#preloader-wrapper').toggleClass('hide');
                }
            });
        }

        function Clear() {


            reloadpage(1);
        }


    </script>
}




