
@model IPagedList<TinTuc>

@using X.PagedList.Mvc.Core;


@using X.PagedList;
@using X.PagedList.Web.Common

<style>
    .list-table {
        min-height: 400px
    }
    list-table table {
        border: 1px solid gray;
    }
    #thead {
        background-color: rgb(82, 183, 136);
        color: white;
    }
    .table-btn a:hover{
        transform: scale(1.075)
    }
    .btn-edit {
        background-color: rgb(17, 138, 178);
    }
    .btn-delete {
        background-color: rgb(17, 138, 178);
    }
    .btn-infomation {
        background-color: rgb(17, 138, 178);
    }
    .table-btn a i{
        color: white;
    }
</style>

<div id="list">

    <div class="list-table" >
        <table class="table table table-striped table-bordered text-left w-100 " style="font-size:small">
                <tr id="thead">

                    <th>
                        Tiêu đề
                    </th>

                    <th class="text-center">
                        Trạng thái
                    </th>

                    <th class="text-center">
                        Thể loại
                    </th>

                    <th class="text-center">Thao tác</th>
                </tr>
                @foreach (var item in ViewBag.Names as IEnumerable<TinTuc>)
                {
                    <tr>
                        <td>@item.TieuDe</td>
                        <td class="text-center">@item.TrangThai</td>
                        <td class="text-center">@item.MaTLNavigation.TenTL</td>
                        <td class="table-btn text-nowrap text-center">
                            <a class="btn-edit btn btn-sm active" title="Chỉnh sửa" href="@Url.ActionLink("Edit","TinTuc", new  {id= item.MaBaiViet })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a class="btn-delete btn btn-sm active" title="Xóa" onclick="_delete('@item.MaBaiViet')"> <i class="fa fa-trash"></i></a>
                            <a class="btn-infomation btn btn-sm active" title="Chi tiết" onclick="_Detail('@item.MaBaiViet')"> <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }

        </table>
    </div>


    <div class="text-right">

        @{
            var pageRender = new PagedListRenderOptions
            {
                MaximumPageNumbersToDisplay = 5,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                DisplayLinkToLastPage = PagedListDisplayMode.Never,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayPageCountAndCurrentLocation = false,
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },


                ContainerDivClasses = new[] { "pagination-container" }


            };
        }
        @{
            var searchModel = ViewBag.Data as TinTucSearchModel;
        }


        @Html.PagedListPager((IPagedList<TinTuc>)ViewBag.Names, page => Url.Action("PageList", new { page, TieuDeSearch = searchModel.TieuDeSearch, TrangThaiSearch = searchModel.TrangThaiSearch, MaTLSearch = searchModel.MaTLSearch }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(pageRender, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "nameListContainer" }))
    </div>




</div>






