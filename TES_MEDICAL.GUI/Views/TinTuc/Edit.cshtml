@model TES_MEDICAL.GUI.Models.TinTuc
@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
    Layout = "~/Views/Shared/LayoutAdmin/LayoutAdmin.cshtml";
}

<style>
    .main {
        font-family: Arial;
    }

    .main-background {
        background-color: white;
    }

    .main-title {
        background-color: rgb(233, 236, 239);
        height: 40px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px
    }

        .main-title h6 {
            padding: 10px;
            font-weight: 600;
            color: rgb(108, 117, 125);
        }

    form {
        padding-inline: 30px;
    }

    .main-left {
        margin-left: 10px;
        width: 67%;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .main-title-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -15px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .main-title-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .main-left-title .form-floating label {
        color: gray;
        font-weight: 400;
    }
    .main-right {
        width: 30%;
        margin-left: 25px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .main-specialist-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -35px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .main-specialist-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .main-specialist select {
        color: gray;
    }

    .main-status-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -35px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .main-status-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .main-status .form-check {
        margin-left: 20px;
    }

        .main-status .form-check label {
            color: gray;
        }
    .main-content {
        margin-inline: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .main-content-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -15px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .main-content-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .main-btn .btn-savee {
        background-color: rgb(82, 183, 136);
        color: white;
        border: none;
    }

    .main-btn .btn-closee {
        background-color: rgb(239, 71, 111);
        color: white;
        border: none;
    }
    .note-editable {
        background-color: white;
    }
</style>

<div class="main p-3">
    <div class="main-background">
        <div class="main-title">
            <h6>Chỉnh sửa bài viết</h6>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <form class="row g-3" asp-action="Edit" asp-controller="TinTuc" method="post">
            @Html.HiddenFor(model => model.MaBaiViet)
            @Html.HiddenFor(model => model.MaNguoiViet)
            <div class="main-left form-group">
                <div class="main-left-title">
                    <div class="main-title-label">
                        <label class="form-label">Tiêu đề</label>
                    </div>
                    @*<input type="text" asp-for="TieuDe" class="form-control">*@
                    <div class="form-floating mt-3 mb-3">
                        <textarea class="form-control" asp-for="TieuDe" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 130px"></textarea>
                        <label for="floatingTextarea2">Nhập tiêu đề bài viết ...</label>
                    </div>
                </div>
            </div>
            <div class="main-right form-group row mt-3">
                <div class="main-specialist">
                    <div class="main-specialist-label">
                        <label class="form-label">Thể loại</label>
                    </div>
                    <div class="col-12 mt-3 mb-3">
                        <select asp-for="MaTL" asp-items="@ViewBag.MaTL" class="form-select">
                            <option value="">Chọn thể loại</option>
                        </select>
                        @*@Html.DropDownList("MaTL", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="main-status">
                    <div class="main-status-label">
                        <label class="form-label">Trạng thái</label>
                    </div>
                    <div class="form-check mt-3 mb-3">
                        <input class="form-check-input" asp-for="TrangThai" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Đang hoạt động
                        </label>
                    </div>
                </div>
            </div>

            
            <div class="main-content col-12">
                <div class="main-content-label mb-3">
                    <label class="form-label">Trạng thái</label>
                </div>
                <textarea rows="20" asp-for="NoiDung" class="form-control NoiDung" placeholder="Nhập nội dung ..."></textarea>
            </div>
            <div class="main-btn d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn-savee btn"><i class="fas fa-save"></i> Cập nhật</button>
                <button class="btn-closee btn"><i class="fas fa-close"></i> Đóng</button>
            </div>
        </form>
    </div>

</div>

@section scripts{
    @*<script src="~/ckeditor/ckeditor.js"></script>
        <script src="~/ckeditor/adapters/jquery.js"></script>
        <script>
            $("#NoiDung").ckeditor();
        </script>*@
    <link href="~/summernote/summernote-lite.css" rel="stylesheet" />
    <script src="~/summernote/summernote-lite.js"></script>

    <script>
    $(document).ready(
        function () {
            $('.NoiDung').summernote({
                height: 300,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true,
                callbacks: {
                    onImageUpload: function (files) {
                        for (let i = 0; i < files.length; i++) {
                            UploadImage(files[i]);
                        }
                    }
                }
            });

            function UploadImage(file) {
                var url = '@Url.Action("UploadFile", "TinTuc")';

                formData = new FormData();
                formData.append("aUploadedFile", file);
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (FileUrl) {
                       // alert(FileUrl);
                        var imgNode = document.createElement('img');
                        imgNode.src = FileUrl;
                        $('.NoiDung').summernote('insertNode', imgNode);
                    },
                    error: function (data) {
                        alert(data.responseText);
                    }
                });
            }
        });
    </script>

}

