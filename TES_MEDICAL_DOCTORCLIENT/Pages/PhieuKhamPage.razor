@page "/"
@page "/PhieuKham"



<div class="col-12">
    <div class="block">
        <div class="block-title">
            <h2><strong>Phiếu khám</strong></h2>
        </div>
        <div style="float:left;">
            <input placeholder="Tìm kiếm theo tên">
            <button style="margin-left:5px; background-color:seagreen; color:white" type="button" class="btn btn-sm mr-2" id="btSeach"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Lọc</button>
        </div>

        <br />

        <div class="form-group">
            <table class=" table table-striped">
                <thead>
                  
                    <tr>
                        <th></th>
                        <th scope="col">STT</th>
                        <th></th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in PhieuKhams)
                    {
                        <tr>
                            <th></th>
                            <th>@item.STTPhieuKham.STT</th>
                            <th></th>
                            <td>@item.MaBNNavigation.HoTen</td>
                            <td class="text-nowrap">
                                <a class="btn btn-info btn-sm active" title="Khám bệnh"> <i class="fas fa-stethoscope" aria-hidden="true"></i></a>
                                <a class="btn btn-info btn-sm active" title="Huỷ bỏ"> <i class="fas fa-close" aria-hidden="true"></i></a>

                            </td>
                        </tr>


                    }


                  
                </tbody>
            </table>

        </div>

    </div>
</div>


